---
interface Field {
  name: string;
  type: string;
  description: string;
  required: boolean;
  defaultValue?: string;
}

interface Props {
  title?: string;
  description?: string;
  fields: Field[];
}

const { title = "Campos", description = "", fields = [] } = Astro.props;
---

<div
  class="my-8 overflow-hidden border border-gray-200 dark:border-gray-800 rounded-lg shadow-sm"
>
  {
    title && (
      <div class="px-6 py-4 border-b border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-900">
        <h3 class="text-base font-medium text-gray-900 dark:text-gray-100">
          {title}
        </h3>
        {description && (
          <p class="mt-1 text-sm text-gray-600 dark:text-gray-400">
            {description}
          </p>
        )}
      </div>
    )
  }

  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-800">
      <thead>
        <tr class="bg-gray-50 dark:bg-gray-800/60">
          <th
            scope="col"
            class="px-6 py-3.5 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider"
          >
            Campo
          </th>
          <th
            scope="col"
            class="px-6 py-3.5 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider"
          >
            Tipo
          </th>
          <th
            scope="col"
            class="px-6 py-3.5 text-left text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider"
          >
            Descripción
          </th>
          <th
            scope="col"
            class="px-6 py-3.5 text-center text-xs font-medium text-gray-500 dark:text-gray-400 uppercase tracking-wider"
          >
            Requerido
          </th>
        </tr>
      </thead>
      <tbody
        class="bg-white dark:bg-gray-950 divide-y divide-gray-100 dark:divide-gray-800"
      >
        {
          fields.map((field) => (
            <tr class="hover:bg-gray-50 dark:hover:bg-gray-900/50 transition-colors duration-150">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-blue-600 dark:text-blue-400">
                {field.name}
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <code class="px-2 py-1 rounded bg-gray-50 dark:bg-gray-800 text-gray-800 dark:text-gray-300 text-xs font-mono border border-gray-200 dark:border-gray-700">
                  {field.type}
                </code>
              </td>
              <td class="px-6 py-4 text-sm text-gray-600 dark:text-gray-300">
                <div class="prose-sm dark:prose-invert">
                  {field.description}
                  {field.defaultValue && (
                    <span class="ml-1 text-gray-500 dark:text-gray-500">
                      (Predeterminado:{" "}
                      <code class="px-1 py-0.5 rounded bg-gray-50 dark:bg-gray-800 text-gray-700 dark:text-gray-300 text-xs font-mono">
                        {field.defaultValue}
                      </code>
                      )
                    </span>
                  )}
                </div>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-center">
                {field.required ? (
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-800 dark:bg-blue-900/20 dark:text-blue-300">
                    <span class="inline-block w-1.5 h-1.5 rounded-full bg-blue-500 dark:bg-blue-400 mr-1.5 opacity-70" />
                    Sí
                  </span>
                ) : (
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-600 dark:bg-gray-800 dark:text-gray-400">
                    No
                  </span>
                )}
              </td>
            </tr>
          ))
        }
      </tbody>
    </table>
  </div>

  <div
    class="px-6 py-4 bg-gray-50 dark:bg-gray-900 border-t border-gray-200 dark:border-gray-800"
  >
    <div class="flex items-center text-xs text-gray-500 dark:text-gray-400">
      <span
        class="inline-flex items-center mr-2 px-2 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-800 dark:bg-blue-900/20 dark:text-blue-300"
      >
        <span
          class="inline-block w-1.5 h-1.5 rounded-full bg-blue-500 dark:bg-blue-400 mr-1.5 opacity-70"
        ></span>
        Sí
      </span>
      <span>Indica campo obligatorio</span>
    </div>
  </div>
</div>
